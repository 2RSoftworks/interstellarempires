import java.awt.Component;

import javax.swing.Renderer;

import org.lwjgl.opengl.Display;

import com.badlogic.gdx.graphics.GL11;
import com.sun.tools.example.debug.gui.GUI;

/**
 * 
 * Launches the Desktop Application
 * 
 * @author Katharina
 * 
 */
public class Main {
	public static void main(String[] args) {

		try {
			Display.setDisplayModeAndFullscreen(null);
			Display.create();
			Display.setTitle("TWL Game UI Demo");
			Display.setVSyncEnabled(true);

			Renderer renderer = new Renderer() {

				@Override
				public void setValue(Object arg0, boolean arg1) {
					// TODO Auto-generated method stub

				}

				@Override
				public Component getComponent() {
					// TODO Auto-generated method stub
					return null;
				}
			};
			GameUIDemo gameUI = new GameUIDemo();
			GUI gui = new GUI(gameUI, renderer);

			ThemeManager theme = ThemeManager.createThemeManager(
					GameUIDemo.class.getResource("gameui.xml"), renderer);
			gui.applyTheme(theme);

			while (!Display.isCloseRequested() && !gameUI.quit) {
				GL11.glClear(GL11.GL_COLOR_BUFFER_BIT);

				gui.update();
				Display.update();
				SimpleTest.reduceInputLag();
			}

			gui.destroy();
			theme.destroy();
		} catch (Exception ex) {
			SimpleTest.showErrMsg(ex);
		}
		Display.destroy();

		// LwjglApplicationConfiguration cfg = new
		// LwjglApplicationConfiguration();
		// cfg.title = "Client";
		// cfg.useGL20 = false;
		// cfg.resizable = false;
		// cfg.width = Settings.getOldWidth();
		// cfg.height = Settings.getOldHeight();
		//
		// new LwjglApplication(new MainClientLauncher(), cfg);
	}
}
