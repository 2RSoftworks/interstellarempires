import bucket.game.client.gui.SplashScreen;
import bucket.game.client.util.Settings;

import com.badlogic.gdx.Game;
import com.badlogic.gdx.backends.lwjgl.LwjglApplication;
import com.badlogic.gdx.backends.lwjgl.LwjglApplicationConfiguration;

/**
 * 
 * Called when the game is created. Launches itself. Desktop Backend only so far!
 * 
 * @author: ***REMOVED***
 */
public class MainClientLauncher extends Game {

  public static void main(String[] args) {
	LwjglApplicationConfiguration cfg = new LwjglApplicationConfiguration();
	cfg.title = "Game Client - Return of the bad programmer¨";
	cfg.useGL20 = false;
	cfg.resizable = false;
	cfg.width = Settings.getOldWidth();
	cfg.height = Settings.getOldHeight();

	new LwjglApplication(new MainClientLauncher(), cfg);
  }

  @Override
  public void create() {
	setScreen(new SplashScreen());
  }

  // TODO: Not sure about this. Maybe each screen disposes itself. Will have to see where everything is going
  @Override
  public void dispose() {
	new SplashScreen().dispose();
  }

}
